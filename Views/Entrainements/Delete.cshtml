@model Stage.Models.Entrainement

@{
    ViewData["Title"] = "Supprimer l'Événement";
}

<div class="container mt-5">
    <div class="card shadow-lg" style="animation: fadeIn 1s;">
        <div class="card-body text-center">
            <h2 class="card-title text-danger">Êtes-vous sûr de vouloir supprimer cet événement ?</h2>
            <p class="card-text text-muted">Cette action est irréversible.</p>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Titre : </strong> @Model.Titre
                </li>
                <li class="list-group-item">
                    <strong>Date : </strong> Du @Model.DateDebut.ToString("dd MMM yyyy") au @Model.DateFin.ToString("dd MMM yyyy")
                </li>
                <li class="list-group-item">
                    <strong>Lieu : </strong> @Model.Lieu
                </li>
            </ul>

            <div class="mt-4">
                <!-- Bouton pour confirmer la suppression -->
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Supprimer
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
