@model Stage.Models.Entrainement

@{
    ViewData["Title"] = "Modifier l'Événement";
}

<div class="container mt-5">
    <div class="card shadow-lg" style="animation: slideIn 1s;">
        <div class="card-body">
            <h2 class="card-title text-center">Modifier l'Événement</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- Titre -->
                <div class="form-group">
                    <label for="Titre">Titre de l'Événement</label>
                    <input type="text" class="form-control" asp-for="Titre" placeholder="Entrez le titre" />
                    <span asp-validation-for="Titre" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Entrez la description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Dates -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="DateDebut">Date de Début</label>
                        <input type="date" class="form-control" asp-for="DateDebut" />
                        <span asp-validation-for="DateDebut" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="DateFin">Date de Fin</label>
                        <input type="date" class="form-control" asp-for="DateFin" />
                        <span asp-validation-for="DateFin" class="text-danger"></span>
                    </div>
                </div>

                <!-- Heures -->
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="HeureDebut">Heure de Début</label>
                        <input type="time" class="form-control" asp-for="HeureDebut" />
                        <span asp-validation-for="HeureDebut" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="HeureFin">Heure de Fin</label>
                        <input type="time" class="form-control" asp-for="HeureFin" />
                        <span asp-validation-for="HeureFin" class="text-danger"></span>
                    </div>
                </div>

                <!-- Lieu -->
                <div class="form-group">
                    <label for="Lieu">Lieu</label>
                    <input type="text" class="form-control" asp-for="Lieu" placeholder="Entrez le lieu" />
                    <span asp-validation-for="Lieu" class="text-danger"></span>
                </div>

                <!-- Type d'Événement -->
                <div class="form-group">
                    <label for="TypeEvenement">Type d'Événement</label>
                    <select asp-for="TypeEvenement" class="form-control">
                        <option>Entraînement</option>
                        <option>Compétition</option>
                    </select>
                    <span asp-validation-for="TypeEvenement" class="text-danger"></span>
                </div>

                <!-- Boutons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Sauvegarder les modifications
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
