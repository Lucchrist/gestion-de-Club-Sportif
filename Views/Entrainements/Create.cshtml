@model Stage.Models.Entrainement

@{
    ViewData["Title"] = "Créer un Entraînement";
}

<div class="container mt-5">
    <h1 class="text-center">Créer un Entraînement</h1>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Nouvel Entraînement</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Titre" class="form-label"></label>
                            <input asp-for="Titre" class="form-control" />
                            <span asp-validation-for="Titre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateHeure" class="form-label"></label>
                            <input asp-for="DateHeure" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DateHeure" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Lieu" class="form-label"></label>
                            <input asp-for="Lieu" class="form-control" />
                            <span asp-validation-for="Lieu" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TypeEvenement" class="form-label">Type d'Événement</label>
                            <select asp-for="TypeEvenement" class="form-select">
                                <option value="Entrainement">Entraînement</option>
                                <option value="Competition">Compétition</option>
                            </select>
                            <span asp-validation-for="TypeEvenement" class="text-danger"></span>
                        </div>

                        <div class="form-group text-end">
                            <input type="submit" value="Créer" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary ms-2">Retour à la Liste</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
