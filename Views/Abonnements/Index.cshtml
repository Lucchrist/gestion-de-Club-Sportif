@model IEnumerable<Stage.Models.Abonnement>

@{
    ViewData["Title"] = "Liste des Abonnements";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Liste des Abonnements</h1>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Membre</th>
                <th>Type d'Abonnement</th>
                <th>Statut</th>
                <th>Montant</th>
                <th>Date de Début</th>
                <th>Date de Fin</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var abonnement in Model)
                {
                    <tr>
                        <td>@abonnement.Id</td>
                        <td>@abonnement.Membre?.Nom</td>
                        <td>@abonnement.TypeAbonnement</td>
                        <td class="text-@((abonnement.Statut.ToLower() == "actif") ? "success" : "danger")">
                            @abonnement.Statut
                        </td>
                        <td>@abonnement.Montant.ToString("C")</td>
                        <td>@abonnement.DateDebut.ToString("dd/MM/yyyy")</td>
                        <td>@abonnement.DateFin?.ToString("dd/MM/yyyy") ?? "N/A"</td>
                        <td>@abonnement.Commentaire</td>
                        <td>
                            <a href="@Url.Action("Details", "Abonnements", new { id = abonnement.Id })" class="btn btn-info btn-sm">Détails</a>
                            <a href="@Url.Action("Edit", "Abonnements", new { id = abonnement.Id })" class="btn btn-warning btn-sm">Modifier</a>
                            <a href="@Url.Action("Delete", "Abonnements", new { id = abonnement.Id })" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">Aucun abonnement trouvé.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Abonnements")" class="btn btn-primary">Ajouter un Abonnement</a>
    </div>
</div>
