<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stage</title>
    <script src="~/js/site.js"></script>
    @section Scripts {
        <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.js"></script>
    }


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stage.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #003f87; padding: 10px;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" style="color: #fff; font-weight: bold;">ClubMaster</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" href="/" style="color: #fff;">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Membres" style="color: #fff;">Gestion des Membres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Adhesions" style="color: #fff;">Gestion des Abonnements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Entrainements" style="color: #fff;">Gestion des événements </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Participations" style="color: #fff;">Gestion des Participations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Statistiques" style="color: #fff;">Voir Les Statistiques</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #fff;">Confidentialité</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ClubMaster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Confidentialité</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
