@model IEnumerable<Stage.Models.Membre>

@{
    ViewData["Title"] = "Liste des membres";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Créer un nouveau membre
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Date d'adhésion</th>
                <th scope="col">Statut d'adhésion</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td>@item.Email</td>
                    <td>@item.Telephone</td>
                    <td>@item.DateAdhesion.ToString("dd/MM/yyyy")</td>
                    <td>@item.StatutAdhesion</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Détails
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}
