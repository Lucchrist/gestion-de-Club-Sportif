@model IEnumerable<Stage.Models.Membre>


<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Membres</h1>

    <div class="d-flex justify-content-between mb-3">
        <!-- Bouton pour créer un nouveau membre -->
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Nouveau Membre
        </a>

        <!-- Barre de recherche -->
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control me-2" placeholder="Rechercher un membre...">
            <button type="submit" class="btn btn-outline-primary">Rechercher</button>
        </form>

        <!-- Boutons de filtrage -->
        <div>
            <a asp-action="Index" asp-route-statutFilter="Actif" class="btn btn-outline-success @(ViewBag.StatutFilter == "Actif" ? "active" : "")">
                Actifs
            </a>
            <a asp-action="Index" asp-route-statutFilter="Expire" class="btn btn-outline-danger @(ViewBag.StatutFilter == "Expire" ? "active" : "")">
                Expirés
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary @(string.IsNullOrEmpty(ViewBag.StatutFilter) ? "active" : "")">
                Tous
            </a>
        </div>
    </div>

    <!-- Tableau des membres -->
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Date d'adhésion</th>
                <th scope="col">Statut</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nom</td>
                        <td>@item.Email</td>
                        <td>@item.Telephone</td>
                        <td>@item.DateAdhesion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @(item.StatutAdhesion == "Actif" ? "bg-success" : "bg-danger")">
                                @item.StatutAdhesion
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Détails
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Aucun membre trouvé.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
