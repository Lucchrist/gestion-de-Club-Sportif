@model Stage.Models.Membre

@{
    ViewData["Title"] = "Détails du Membre";
}

<h1 class="text-center mt-4">Détails du Membre</h1>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h4>@Model.Nom</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nom</dt>
            <dd class="col-sm-9">@Model.Nom</dd>

            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">Téléphone</dt>
            <dd class="col-sm-9">@Model.Telephone</dd>

            <dt class="col-sm-3 fw-bold">Date d'Adhésion</dt>
            <dd class="col-sm-9">@Model.DateAdhesion.ToString("dd MMMM yyyy")</dd>

            <dt class="col-sm-3 fw-bold">Statut d'Adhésion</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.StatutAdhesion == "Actif" ? "bg-success" : "bg-danger")">
                    @Model.StatutAdhesion
                </span>
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Modifier</a>
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
