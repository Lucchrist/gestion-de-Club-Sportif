@model Stage.Models.Membre

@{
    ViewData["Title"] = "Suppression du Membre";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3>Suppression du Membre</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Êtes-vous sûr de vouloir supprimer ce membre ?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nom</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nom)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">Téléphone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telephone)</dd>

                <dt class="col-sm-3 fw-bold">Date d'Adhésion</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DateAdhesion)</dd>

                <dt class="col-sm-3 fw-bold">Statut d'Adhésion</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StatutAdhesion)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary ms-2">Retour à la liste</a>
        </div>
    </div>
</div>
