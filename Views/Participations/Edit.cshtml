
@model Stage.Models.Participation

<h2>Modifier le statut de participation</h2>

<form asp-action="ModifierStatut" method="post" class="container mt-5">
    <input type="hidden" name="participationId" value="@Model.Id" />

    <div class="form-group">
        <label>Nom du membre</label>
        <input type="text" readonly value="@Model.Membre.Nom" class="form-control" />
    </div>

    <div class="form-group mb-4">
        <label for="StatutParticipation" class="form-label">Sélectionner le Statut</label>
        <select id="StatutParticipation" asp-for="StatutParticipation" class="form-control">
            <option value="Présent">Présent</option>
            <option value="Absent">Absent</option>
            <option value="Excusé">Excusé</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
</form>

