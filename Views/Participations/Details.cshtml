@model Stage.Models.Participation

@{
    ViewData["Title"] = "Détails de la participation";
}

<div class="container mt-5">
    <h2 class="display-6 text-center mb-4">Détails de la participation</h2>

    <div class="card shadow-lg p-4 bg-white rounded">
        <div class="card-body">
            <h4 class="card-title text-primary">Membre : @Model.Membre.Nom @Model.Membre.Nom</h4>
            <hr class="my-4">

            <h5 class="card-subtitle mb-3">Informations sur l'entraînement</h5>
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item">
                    <strong>Titre :</strong> @Model.Entrainement.Titre
                </li>
                <li class="list-group-item">
                    <strong>Date de début :</strong> @Model.Entrainement.DateDebut.ToString("yyyy-MM-dd")
                </li>
                <li class="list-group-item">
                    <strong>Date de fin :</strong> @Model.Entrainement.DateFin.ToString("yyyy-MM-dd")
                </li>
                <li class="list-group-item">
                    <strong>Heure :</strong> @Model.Entrainement.HeureDebut.ToString(@"hh\:mm") - @Model.Entrainement.HeureFin.ToString(@"hh\:mm")
                </li>
                <li class="list-group-item">
                    <strong>Lieu :</strong> @Model.Entrainement.Lieu
                </li>
                <li class="list-group-item">
                    <strong>Type d'événement :</strong> @Model.Entrainement.TypeEvenement
                </li>
                <li class="list-group-item">
                    <strong>Statut de participation :</strong> <span class="badge bg-info">@Model.StatutParticipation</span>
                </li>
            </ul>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i> Modifier
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
