@model Stage.Models.Participation

@{
    ViewData["Title"] = "Supprimer la Participation";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container">
    <h3>Êtes-vous sûr de vouloir supprimer cette participation ?</h3>

    <dl class="row">
        <dt class="col-sm-3">Membre</dt>
        <dd class="col-sm-9">@Model.Membre.Nom</dd>

        <dt class="col-sm-3">Entraînement</dt>
        <dd class="col-sm-9">@Model.Entrainement.Titre</dd>

        <dt class="col-sm-3">Statut</dt>
        <dd class="col-sm-9">@Model.StatutParticipation</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
